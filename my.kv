#:import utils kivy.utils
#:import LabelBase kivy.core.text
#:import MapView kivy.garden.mapview.MapView

WindowManager:
    MainWindow:
    SecondWindow:
    LoginWindow:
    WelcomeScreen:
    HomeScreen:

<MainWindow>:
    name: 'main'
    canvas.before:
        Color:
            rgb : utils.get_color_from_hex('#F6C707')
        Rectangle:
            pos: self.pos
            size: self.size
    Image:
        source:'assets/logo.png'

<SecondWindow>:
    name: 'Second'
    canvas.before:
        Color:
            rgb : utils.get_color_from_hex('#F8FBFF')
        Rectangle:
            pos: self.pos
            size: self.size
    RelativeLayout:
        size:root.width,root.height
        Image:
            source:'assets/secwinimage.png'
            pos : (-24.17,146.635)
            size : (256.66,280.73)
        MDBoxLayout:
            size: (196,29)
            pos: (89,-72.5)
            MDLabel:
                text: 'Route Building'
                color : (0,0,0,1)
                font_size: 28
                font_name: "DMSans_med"
        MDBoxLayout:
            pos: (25,-115)
            size: (171.5,22)
            MDLabel:
                text: 'Drag the mark to a specific point on the map \n          or enter your street to map routes'
                color : (0,0,0,0.6)
                font_size: 16
                font_name: "DMSans_reg"
        MDFillRoundFlatButton:
            pos: (147,117)
            text: 'Next'
            text_color: utils.get_color_from_hex('#000000')
            font_size:18
            md_bg_color : utils.get_color_from_hex('#F6C707')
            on_press: root.manager.current='Login'

